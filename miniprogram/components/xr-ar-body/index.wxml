<xr-scene ar-system="modes:Body" bind:ready="handleReady" bind:ar-ready="handleARReady">
  <xr-assets bind:progress="handleAssetsProgress" bind:loaded="handleAssetsLoaded">
  </xr-assets>
  <xr-node wx:if="{{arReady}}">
    <xr-ar-tracker id='tracker' mode="Body" auto-sync="-1 0 5 6 17 18 11 12 13 14 15 16">
      <xr-node name="body">
        <xr-mesh geometry="cube" scale="0.6 1.7 0.1" uniforms="u_baseColorFactor:1 1 1 0.5" states="renderQueue:2500,alphaMode:BLEND"/>
      </xr-node>
      <xr-node name="head">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:1 0 0 1" />
      </xr-node>

      <xr-node name="shoulderL">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 0 1 1" />
      </xr-node>
      <xr-node name="shoulderR">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 0 1 1" />
      </xr-node>

      <xr-node name="HandL">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 0 1 1" />
      </xr-node>
      <xr-node name="HandR">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 0 1 1" />
      </xr-node>

      <xr-node name="crotchL">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 1 0 1" />
      </xr-node>
      <xr-node name="crotchR">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 1 0 1" />
      </xr-node>

      <xr-node name="kneeL">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 1 0 1" />
      </xr-node>
      <xr-node name="kneeR">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 1 0 1" />
      </xr-node>

      <xr-node name="footL">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 1 0 1" />
      </xr-node>
      <xr-node name="footR">
        <xr-mesh geometry="sphere" scale="0.05 0.05 0.05" uniforms="u_baseColorFactor:0 1 0 1" />
      </xr-node>
    </xr-ar-tracker>
    <xr-camera
      id="camera" node-id="camera" clear-color="0.925 0.925 0.925 1"
      background="ar" is-ar-camera near="0.01"
    ></xr-camera>
  </xr-node>
  <xr-node node-id="lights">
    <xr-light type="ambient" color="1 1 1" intensity="1" />
    <xr-light type="directional" rotation="180 0 0" color="1 1 1" intensity="3" />
  </xr-node>
</xr-scene>
